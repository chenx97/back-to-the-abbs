abinfo "Building"
make

abinfo "Installing libraries"
mkdir -p ${PKGDIR}/usr/include
install -Dm644 ${SRCDIR}/lib/libconfig4cpp.so ${PKGDIR}/usr/lib/libconfig4cpp.so

abinfo "Installing headers"
cp -vr ${SRCDIR}/include/config4cpp ${PKGDIR}/usr/include/
chmod u=rwX,go=rX -R ${PKGDIR}/usr/

abinfo "Installing binaries"
for i in config4cpp config2cpp; do
	install -Dm755 ${SRCDIR}/bin/$i ${PKGDIR}/usr/bin/$i
done
